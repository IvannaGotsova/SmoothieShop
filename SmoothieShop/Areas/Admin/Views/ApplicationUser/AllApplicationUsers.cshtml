@using SmoothieShop.Data.Models.ApplicationUserModels

@model IEnumerable<AllApplicationUsersModel>


@{
    ViewBag.Title = "All Applications Users";
}


<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<a class="btn btn-warning" asp-controller="Home" asp-action="Index"
   sp-route-information="" class="btn btn-success">HOME</a>
<hr />

<div class="text-center row">
    @if (Model.Count() > 0)
    {
        @foreach (var applicationUser in Model)
        {
            <div class="card col-4" style="width: 20rem;">
                <div class="card-body">
                    <h5 class="card-title mt-1">Application User ID: @applicationUser.Id</h5>
                    <h3 class="card-title mt-1">Application User First Name: @applicationUser.FirstName</h3>
                    <h3 class="card-title mt-1">Application User Last Name: @applicationUser.LastName</h3>
                </div>
                <a class="btn btn-warning" asp-area="Admin" asp-controller="ApplicationUser" asp-action="EditApplicationUser" asp-route-id="@applicationUser.Id"
                   sp-route-information="" class="btn btn-success">Edit Application User</a>
                <hr />
                <a class="btn btn-warning" asp-area="Admin" asp-controller="ApplicationUser" asp-action="ChangePasswordApplicationUser" asp-route-id="@applicationUser.Id"
                   sp-route-information="" class="btn btn-success">Change Password Application User</a>
                <hr />
                <a class="btn btn-warning" asp-area="Admin" asp-controller="ApplicationUser" asp-action="DeleteApplicationUser" asp-route-id="@applicationUser.Id"
                   sp-route-information="" class="btn btn-success">Delete Application User</a>
                <hr />
            </div>
        }
    }
    else
    {
        <p class="mb-0">There are no application users yet!</p>
    }

</div>
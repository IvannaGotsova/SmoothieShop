@model AddMenuModel

@{
    ViewBag.Title = "Add your new Menu";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form method="post">
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3">
                <label asp-for="@Model.MenuName" class="form-label">Menu Name</label>
                <input asp-for="@Model.MenuName" class="form-control" aria-required="true" />
                <span asp-validation-for="MenuName" class="text-danger"></span>

                <label asp-for="@Model.Price" class="form-label">Menu Price</label>
                <input asp-for="@Model.Price" class="form-control" aria-required="true" />
                <span asp-validation-for="Price" class="text-danger"></span>

                <label asp-for="@Model.Calories" class="form-label">Menu Calories</label>
                <input asp-for="@Model.Calories" class="form-control" aria-required="true" />
                <span asp-validation-for="Calories" class="text-danger"></span>

                <label asp-for="@Model.SmoothiesIds" class="form-label">Add Smoothies for the Menu</label>
                <br>

                <select multiple="multiple"
                        class="multi-select form-control"
                        id="smoothiesSelect"
                        asp-for="@Model.SmoothiesIds"
                        asp-items="ViewBag.Smoothies">
                    @foreach (var smoothie in Model.Smoothies)
                    {
                        <option value="@smoothie.SmoothieId" data-calories="@smoothie.Calories">
                            @smoothie.SmoothieName
                        </option>
                    }
                </select>

                <span asp-validation-for="SmoothiesIds" class="text-danger"></span>

                <br />

                <button type="button" id="calculateBtn" class="btn btn-primary mt-2">Calculate Calories For the Menu</button>

                <div id="caloriesResult" class="mt-2 text-success fw-bold"></div>

            </div>
            <div class="mb-3">
                <input class="btn btn-primary" type="submit" value="Add Menu" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        document.getElementById("calculateBtn").addEventListener("click", function () {
            let select = document.getElementById("smoothiesSelect");
            let selectedOptions = Array.from(select.selectedOptions);

            let totalCalories = selectedOptions.reduce((sum, option) => {
                return sum + parseInt(option.getAttribute("data-calories"));
            }, 0);

            document.getElementById("caloriesResult").innerText =
                "Total Calories: " + totalCalories;
        });
    </script>
}
@model AddFeedbackModel

@{
    ViewBag.Title = "Add your new Feedback";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form method="post">
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3">
                <label asp-for="@Model.Rating" class="form-label">Feedback Rating</label>
                <input asp-for="@Model.Rating" class="form-control" aria-required="true" />
                <span asp-validation-for="Rating" class="text-danger"></span>
                <label asp-for="@Model.Comment" class="form-label">Feedback Comment</label>
                <input asp-for="@Model.Comment" class="form-control" aria-required="true" />
                <span asp-validation-for="Comment" class="text-danger"></span>
                <label asp-for="@Model.CustomerId" class="form-label">Feedback Customer Id</label>
                <input asp-for="@Model.CustomerId" class="form-control" aria-required="true" />
                <span asp-validation-for="CustomerId" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input class="btn btn-primary" type="submit" value="Add Feedback" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
@model DeleteFeedbackModel 

@{
    ViewBag.Title = "Delete Feedback";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<form asp-action="DeleteFeedback">
    <div class="row">
        <div class="col-md-8">
            <input type="hidden" asp-for="@Model.FeedbackId" />
            <div class="form-group">
                <h5 class="card-title mt-1">Feedback Rating: @Model.Rating</h5>
                <h5 class="card-title mt-1">Feedback Comment: @Model.Comment</h5>
                <h5 class="card-title mt-1">Feedback Customer: @Model.FeedbackUserName</h5>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Delete" class="btn btn-primary" />
            </div>
        </div>
    </div>
</form>
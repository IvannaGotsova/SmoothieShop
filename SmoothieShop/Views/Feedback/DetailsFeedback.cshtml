@model DetailsFeedbackModel

@{
    ViewBag.Title = $"Feedback - {Model.FeedbackId}";
}


<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="text-center row">
   <div class="card col-4" style="width: 20rem; ">
       <div class="card-body">
            <input type="hidden" asp-for="@Model.FeedbackId" />
          <h5 class="card-title mt-1">@Model.CustomerId</h5>
          <p class="mb-0">Comment: @Model.Rating</p>
          <p class="mb-0">Author: @Model.Comment</p>
       </div>
    </div>
</div>

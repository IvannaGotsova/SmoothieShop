@model AddCustomerModel

@{
    ViewBag.Title = "Add your new Customer";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form method="post">
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3">
                <label asp-for="@Model.FirstName" class="form-label">Customer First Name</label>
                <input asp-for="@Model.FirstName" class="form-control" aria-required="true" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
                <label asp-for="@Model.LastName" class="form-label">Customer Last Name</label>
                <input asp-for="@Model.LastName" class="form-control" aria-required="true" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.ApplicationUserId" class="form-label">Application User ID</label>
                <select asp-for="@Model.ApplicationUserId" class="form-control">
                    @foreach (var applicationUser in Model.ApplicationUsers)
                    {
                        <option value="@applicationUser.Id">@applicationUser.Id</option>
                    }
                </select>
                <span asp-validation-for="ApplicationUserId" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.PhoneNumber" class="form-label">Customer Phone Number </label>
                <input asp-for="@Model.PhoneNumber" class="form-control" aria-required="true" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                <label asp-for="@Model.Email" class="form-label">Customer Email </label>
                <input asp-for="@Model.Email" class="form-control" aria-required="true" />
                <span asp-validation-for="Email" class="text-danger"></span>
                <label asp-for="@Model.Address" class="form-label">Customer Address </label>
                <input asp-for="@Model.Address" class="form-control" aria-required="true" />
                <span asp-validation-for="Address" class="text-danger"></span>

            </div>

            <div class="mb-3">
                <input class="btn btn-primary" type="submit" value="Add Customer" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
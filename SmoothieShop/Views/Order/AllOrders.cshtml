@model IEnumerable<AllOrdersModel>


@{
    ViewBag.Title = "All Orders";
}


<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<a class="btn btn-warning" asp-controller="Home" asp-action="Index"
   sp-route-information="" class="btn btn-success">HOME</a>
<a class="btn btn-warning" asp-controller="Order" asp-action="AddOrder"
   sp-route-information="" class="btn btn-success">Add Order</a>
<hr />

<div class="text-center row">
    @if (Model.Count()  > 0)
    {
        @foreach (var order in Model)
        {
            <div class="card col-4" style="width: 20rem;">
                <div class="card-body">
                    <h5 class="card-title mt-1">Order ID: @order.OrderId</h5>
                    <p class="card-title mt-1">Order Date: @order.Date</p>
                    <p class="card-title mt-1">Order Price: @order.Price</p>
                    <p class="card-title mt-1">Order Customer ID: @order.CustomerId</p>
                </div>
                <a class="btn btn-warning" asp-controller="Order" asp-action="DetailsOrder" asp-route-id="@order.OrderId"
                   sp-route-information="" class="btn btn-success">Details Order</a>
                <hr />
                <a class="btn btn-warning" asp-controller="Order" asp-action="EditOrder" asp-route-id="@order.OrderId"
                   sp-route-information="" class="btn btn-success">Edit Order</a>
                <hr />
                <a class="btn btn-warning" asp-controller="Order" asp-action="DeleteOrder" asp-route-id="@order.OrderId"
                   sp-route-information="" class="btn btn-success">Delete Order</a>
                <hr />
            </div>
        }
    }
    else 
    {
        <p class="mb-0">There are no orders yet!</p>
    }
 
</div>
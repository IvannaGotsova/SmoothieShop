@model DeleteOrderModel 

@{
    ViewBag.Title = "Delete Order";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<form asp-action="DeleteOrder">
    <div class="row">
        <div class="col-md-8">
            <div class="form-group">
                <label asp-for="Price" class="control-label">Order Price</label>
                <input asp-for="Price" class="form-control" disabled="disabled" />
                <label asp-for="Date" class="control-label">Order Date</label>
                <input asp-for="Date" class="form-control" disabled="disabled" />
                <label asp-for="CustomerId" class="control-label">Order Customer ID</label>
                <input asp-for="CustomerId" class="form-control" disabled="disabled" />
            </div>

            <div class="form-group">
                <input type="submit" value="Delete" class="btn btn-primary" />
            </div>
        </div>
    </div>
</form>
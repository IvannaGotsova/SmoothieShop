@model ApplicationUserMyProfile

@{
    ViewBag.Title = $"Application User - {Model.UserName}";
}


<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="text-center row">
    <div class="card col-4" style="width: 20rem; ">
        <div class="card-body">
            <input type="hidden" asp-for="@Model.Id" />
            <h5 class="card-title mt-1">Application User ID: @Model.Id</h5>
            <p class="mb-0">Application User UserName: @Model.UserName</p>
            <p class="mb-0">Application User First Name: @Model.FirstName</p>
            <p class="mb-0">Application User Last Name: @Model.LastName</p>
        </div>
        <a class="btn btn-warning" asp-area="Admin" asp-controller="ApplicationUser" asp-action="DetailsApplicationUser" asp-route-id="@Model.Id"
           sp-route-information="" class="btn btn-success">Details Application User</a>
        <hr />
        <a class="btn btn-warning" asp-area="Admin" asp-controller="ApplicationUser" asp-action="EditApplicationUser" asp-route-id="@Model.Id"
           sp-route-information="" class="btn btn-success">Edit Application User</a>
        <hr />
        <a class="btn btn-warning" asp-area="Admin" asp-controller="ApplicationUser" asp-action="DeleteApplicationUser" asp-route-id="@Model.Id"
           sp-route-information="" class="btn btn-success">Delete Application User</a>
        <hr />
        <a class="btn btn-warning" asp-area="Admin" asp-controller="ApplicationUser" asp-action="ChangePasswordApplicationUser" asp-route-id="@Model.Id"
           sp-route-information="" class="btn btn-success">Change Password Application User</a>
        <hr />
    </div>
</div>

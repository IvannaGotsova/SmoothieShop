@model IEnumerable<AllIngredientsModel>


@{
    ViewBag.Title = "All Ingredients";
}


<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<a class="btn btn-warning" asp-controller="Home" asp-action="Index"
   sp-route-information="" class="btn btn-success">HOME</a>
@if (this.User.IsInRole("ProductUser") || this.User.IsInRole("Admin"))
{
    <a class="btn btn-warning" asp-controller="Ingredient" asp-action="AddIngredient"
        sp-route-information="" class="btn btn-success">Add Ingredient</a>
    <hr />
}


<div class="text-center row">
    @if (Model.Count()  > 0)
    {
        @foreach (var ingredient in Model)
        {
            <div class="card col-4" style="width: 20rem;">
                <div class="card-body">
                    <h5 class="mb-0">Ingredient ID: @ingredient.IngredientId</h5>
                    <p class="mb-0">Ingredient Name: @ingredient.IngredientName</p>
                    <p class="mb-0">Ingredient Information: @ingredient.IngredientInfo</p>
                    <p class="mb-0">Ingredient Calories Per 100g: @ingredient.Calories</p>
                </div>
                <a class="btn btn-warning" asp-controller="Ingredient" asp-action="DetailsIngredient" asp-route-id="@ingredient.IngredientId"
                   sp-route-information="" class="btn btn-success">Details Ingredient</a>
                <hr />
                @if (this.User.IsInRole("ProductUser") || this.User.IsInRole("Admin"))
                {
                    <a class="btn btn-warning" asp-controller="Ingredient" asp-action="EditIngredient" asp-route-id="@ingredient.IngredientId"
                       sp-route-information="" class="btn btn-success">Edit Ingredient</a>
                    <hr />
                    <a class="btn btn-warning" asp-controller="Ingredient" asp-action="DeleteIngredient" asp-route-id="@ingredient.IngredientId"
                       sp-route-information="" class="btn btn-success">Delete Ingredient</a>
                    <hr />
                }
            </div>
        }
    }
    else 
    {
        <p class="mb-0">There are no ingredients yet!</p>
    }
 
</div>
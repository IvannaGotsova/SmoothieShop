@model AddCustomerUserModel

@{
    ViewBag.Title = "Add your new Customer User";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form method="post">
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3">
                <label asp-for="@Model.ApplicationUsers" class="form-label">Application User Id</label>
                <select asp-for="@Model.ApplicationUsers" class="form-control">
                    @foreach (var applicationUser in Model.ApplicationUsers)
                    {
                        <option value="@applicationUser.Id">@applicationUser.Id</option>
                    }
                </select>
                <span asp-validation-for="ApplicationUserId" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input class="btn btn-primary" type="submit" value="Add Customer" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
@model IEnumerable<AllCustomerUsersModel>


@{
    ViewBag.Title = "All Customer Users";
}


<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<a class="btn btn-warning" asp-controller="Home" asp-action="Index"
   sp-route-information="" class="btn btn-success">HOME</a>
<a class="btn btn-warning" asp-controller="CustomerUser" asp-action="AddCustomerUser"
   sp-route-information="" class="btn btn-success">Add Customer User</a>
<hr />

<div class="text-center row">
    @if (Model.Count()  > 0)
    {
        @foreach (var customerUser in Model)
        {
            <div class="card col-4" style="width: 20rem;">
                <div class="card-body">

                    <h5 class="card-title mt-1">Customer User ID: @customerUser.CustomerUserId</h5>
                    <h5 class="card-title mt-1">Application User ID: @customerUser.ApplicationUserId</h5>
                </div>
                <a class="btn btn-warning" asp-controller="CustomerUser" asp-action="DetailsCustomerUser" asp-route-id="@customerUser.CustomerUserId"
                   sp-route-information="" class="btn btn-success">Details Customer User</a>
                <hr />
                <a class="btn btn-warning" asp-controller="CustomerUser" asp-action="EditCustomerUser" asp-route-id="@customerUser.CustomerUserId"
                   sp-route-information="" class="btn btn-success">Edit Customer User</a>
                <hr />
                <a class="btn btn-warning" asp-controller="CustomerUser" asp-action="DeleteCustomerUser" asp-route-id="@customerUser.CustomerUserId"
                   sp-route-information="" class="btn btn-success">Delete Customer User</a>
                <hr />
            </div>
        }
    }
    else 
    {
        <p class="mb-0">There are no customer users yet!</p>
    }
 
</div>
@model DeleteCustomerUserModel 

@{
    ViewBag.Title = "Delete Customer User";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<form asp-action="DeleteCustomerUser">
    <div class="row">
        <div class="col-md-8">
            <div class="form-group">
                <label asp-for="ApplicationUserId" class="control-label">Application User ID</label>
                <input asp-for="ApplicationUserId" class="form-control" disabled="disabled" />
            </div>

            <div class="form-group">
                <input type="submit" value="Delete" class="btn btn-primary" />
            </div>
        </div>
    </div>
</form>